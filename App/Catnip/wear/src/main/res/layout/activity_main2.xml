<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:layout_gravity="center"
    tools:context=".MainActivity" android:orientation="vertical" tools:deviceIds="wear_round"
    android:background="@drawable/metachart"
    android:id="@+id/watch2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Romney (30%)"
        android:id="@+id/romney"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/obama"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Obama (70%)"
        android:id="@+id/obama"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/romney"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp" />
</RelativeLayout>